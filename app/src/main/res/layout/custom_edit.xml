<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/custom_edt"
        style="@style/Font_16_black"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_45dp"
        android:background="@drawable/edt_background_selector"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dimen_16dp"
        android:textColorHint="@color/gray_b5b5b5"
        app:layout_constraintTop_toTopOf="parent"
        tools:hint="@string/search_edt_hint" />

    <ImageView
        android:id="@+id/custom_edt_delete"
        android:layout_width="@dimen/dimen_45dp"
        android:layout_height="@dimen/dimen_45dp"
        android:paddingHorizontal="@dimen/dimen_15dp"
        android:paddingVertical="@dimen/dimen_10dp"
        android:src="@drawable/btn_close_black"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/custom_edt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/custom_edt"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>